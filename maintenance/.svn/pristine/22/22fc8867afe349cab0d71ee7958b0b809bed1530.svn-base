.frame {
    position: relative;
    top: 5%;

    width: 94%;
    height: 17em;

    margin-left: auto;
    margin-right: auto;
}

.content {
    position: relative;
    top: 15%;

    width: 95%;

    font-family: monospace;
    font-size: 1.15em;

    margin-left: auto;
    margin-right: auto;
}

.offerItemList ol li {
    width: 95%;
    line-height: 2em;
    list-style-type: lower-greek;
}

.offsoftware_services {
    position: relative;
    float: left;
    left: 2%;
    top: 25%;
    width: 95%;
    
    font-family: monospace;
    font-size: 1.15em;
    
    line-height: 1.9em;

    margin-left: auto;
    margin-right: auto;
}

.contact {
    position: relative;
    float: left;
    left: 2%;
    top: 35%;

    font-family: monospace;
    font-size: 1.15em;
}

.phone, .email, .open_close_hours {
    position: relative;
    top: 40%;
    left: 3%;

    width: 45%;
    height: 3em;
    
    font-family: monospace;
    font-size: 1.15em;

    line-height: 1.2em;

    padding-left: 1%;
    padding-top: 0.5%;
    padding-right: 2%;
}

.phone {
    position: relative;
    top: 50%;
}

.phone a, .email a {
    color: #008eb3;
    text-decoration: none;
}

.phone a:hover {
    color: #22B0E9;
    cursor: default;
}

.email a:hover {
    color: #22B0E9;
    text-decoration: underline;
}

.open_close_hours {
    clear: left;
    top: 61%;
    left: 1.1%;
    width: 90%;
        
    font-size: small;
    font-weight: bolder;
}

.now {
    position: relative;
    font-size: 1em;
    font-weight: normal;
}

.isOnLineOrOffline {
    position: relative;
    float: right;
    right: 37%;
    
    font-family: monospace;
    font-size: 0.85em;
    text-transform: uppercase;
}

.offsoftware_services a {
    text-decoration: none;
}


.offsoftware_services a:hover {
    color: darkblue;
}

.company {
    position: relative;
    float: left;
    left: 2.3%;
    top: 56%;
    width: 71%;
}

.details {
    position: relative;
    top: 2%;
    width: 95%;

    font-family: monospace;
    font-size: 1.15em;
}


.company_label {
    position: relative;
    float: left;
}

.company_content {
    position: relative;
    float: right;
    right: 61%;
}

.ceidg, .regon, .nip {
    position: relative;
    left: 5.6%;

    font-family: monospace;
    font-size: 1.15em;

    line-height: 1.5em;
}

.ceidg a, .regon a, .nip a {
    text-decoration: none;
}

.ceidg a:hover, .regon a:hover, .nip a:hover {
    color: darkblue;
}

.separator {
    height: 0.7em;
}
